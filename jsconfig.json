{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"exclude": ["node_modules", "dist"],
	"vueCompilerOptions": {
		"target": 2,
		"extensions": [".vue"]
	}
}
